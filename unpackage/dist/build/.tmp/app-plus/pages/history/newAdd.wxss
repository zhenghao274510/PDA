.all {
  padding-bottom: 100rpx;
}
.uni-add-swiper {
  width: 90%;
  margin: 0 auto;
}
.uni-add-item {
  background: #ffffff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.myInput {
  height: 50rpx;
  font-size: 16rpx;
  border-radius: 5rpx;
  border: 1rpx solid #c0c4cc;
}
.myInput .input {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    padding-left: 15rpx;
}
.myInput input {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 16rpx;
    padding-left: 15rpx;
}
.uni-add-list {
  width: 100%;
}
.uni-add-list-one {
  font-weight: 600;
  color: #222222;
  padding: 5rpx 0;
}
.uni-his-btn {
  width: 90%;
  margin: 40rpx auto 0 auto;
  text-align: center;
  color: #fff;
  background: #ff8300;
  border-radius: 12rpx;
  padding: 15rpx 0;
}
.hide-con {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  background: rgba(0, 0, 0, 0.5);
}
.scrool-warpe {
  padding: 20rpx;
}
.hide-info {
  width: 80%;
  height: 75%;
  border-radius: 15rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  overflow-y: scroll;
  background: #FFFFFF;
}
.hide-btn {
  text-align: center;
  font-size: 30rpx;
  color: #ff8300;
  background: #FFFFFF;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 10rpx solid #F0F0F0;
  border-radius: 0 0 15rpx 15rpx;
}

